<VirtualHost *:80>
  DocumentRoot <%= @public %>

  <% @projects.each do |name| %>
    RackBaseURI /<%= name %>
  <% end %>

  PassengerMaxInstancesPerApp 1 
  PassengerMaxPoolSize <%= @projects.size %>

  <Directory "<%= @public %>">
    AuthName "Fortress"
    AuthType Basic
    AuthUserFile <%= @htpasswd %>
    require valid-user

    Order allow,deny
    Allow from all
  </Directory>

  SetEnv RAILS_RELATIVE_URL_ROOT
</VirtualHost>
